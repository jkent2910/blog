<meta name="viewport" content="width=device-width, initial-scale=1.0">

   <%= analytics_init if Rails.env.production? %>
  
</head>
<body>
  

  

<div class='navbar navbar-default navbar-fixed-top'>
  <div class='container'>
    <div class='navbar-header'>
      <a href='/' class='navbar-brand'> <%= image_tag("happyhealthywealthy_transparent.png", :alt => "HappyHealthyWealthy", :class => "img-logo") %></a>

        <button type="button" class='navbar-toggle collapsed' data-toggle='collapse' data-target='.navbar-collapse'>
          <span class='sr-only'>Toggle Navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
    </div>
    
      <ul class='nav navbar-nav navbar-right collapse navbar-collapse'>
        <% if admin_signed_in? %>
            <li><%= link_to "Sign Out", destroy_admin_session_path, method: :delete %></li>
            <li><a href="/posts">Blog</a></li>
            <li><a href="/course">Free Mini-Course</a></li>
            <li><a href="/story">My Story</a></li>
        <% else %>
            <li><a href="/posts">Blog</a></li>
            <li><a href="/course">Free Mini-Course</a></li>
            <li><a href="/story">My Story</a></li>
        <% end %>
      </ul>
    
    
  </div>
</div>


<%= yield %>
  
  <footer class="blog-footer">
    <p>This site was developed using Ruby on Rails & Bootstrap by <a class="footer_bottom" href="https://twitter.com/jkent2910">me, myself & I</a>.</p>
    <p>
      <a class="footer_bottom" href="#">Back to top</a>
    </p>
  </footer>
</body>
