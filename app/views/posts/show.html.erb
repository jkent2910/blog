<div class="container-fluid">
  Navigation & Links
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <h3 class="text-center"><%= @post.title %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 text-center">
      <%= image_tag @post.image.url(:thumb) %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <p class="lead text-center">Published <%= @post.created_at.strftime('%b %d, %Y') %></p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <p class="lead text-center">Filed under: <% @post.categories.each do |category| %>
  										<%= link_to category.name, category %>&nbsp;
  									<% end %>
      </p>    
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <p class="post_content">
        <%= @post.content %>
      </p>
    </div>
  </div>
    
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <%= @post.comments.count %> Comments 
		  <%= render @post.comments %> 
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <p class="post_content">Add a comment: </p>
      <p class="post_content">
        <%= render "comments/form" %></p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <%= @post.ratings.count %> Ratings
      <p class="post_content">
      <%= render @post.ratings %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <p class="post_content">Add a rating:</p>
      <p class="post_content"><%= render 'ratings/form'  %></p>
    </div>
  </div>

</div>
    
  <div class="row">
    
    <% if current_admin != Post.find(params[:id]).admin %>
      <%= link_to "Back", posts_path, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Back", posts_path, class: "btn btn-primary" %>
      <%= link_to "Edit", edit_post_path, class: "btn btn-default" %>
      <%= link_to "Delete", post_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default" %>
    <% end %>

    </div>


<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'rating[rating_number]'
  });
</script>