<h1>Write and Publish a New Post</h1>
<% if @post.errors.any? %>
<div class="error_messages">
   <h2>You're missing some fields</h2>
   <ul>
     <% @post.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>
<%= render :partial => 'form' %>