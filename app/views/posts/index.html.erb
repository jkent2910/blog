<div class="container-fluid">
  <h4>Navigation</h4>
</div> <!--- container-fluid --->

<div class="container-fluid">
  <h2>Header/Logo </h2>
</div> <!--- container-fluid ---->


    <% @posts.each do |post| %>
<div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 col-xs-6">
          <%= image_tag post.image.url(:thumb) %>
      </div> <!---col xs-6 col-xs-6 --->
      <div class="col-sm-6 col-xs-6">
          <h3><%= post.title %></h3>
          <%= link_to "Read", post, class: "btn btn-primary btn-sm"%>
      </div> <!---col xs-6 col-xs-6 --->
  </div> <!--- row ---->
  <div class="row">
    <div class="col-sm-4 col-xs-4">
      <%= post.created_at.strftime('%b %d, %Y') %> 
    </div> <!-- col-sm-4 --->
    <div class="col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4">
        <%= post.ratings.count %> Ratings
    </div> <!-- col-sm-4 --->
  </div> <!-- row -->
</div> <!-- container ---->
<%end%>


